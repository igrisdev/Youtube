<script>
  import { gsap } from "gsap";

  export const tl_section_1 = gsap.timeline();

  tl_section_1.from(".section_1_earth_with_people", {
    y: "100%",
    duration: 1,
    ease: "power1.inOut",
  });

  tl_section_1.from(
    ".section_1_title",
    {
      y: "20%",
      duration: 1,
      opacity: 0,
      ease: "power1.inOut",
    },
    "<"
  );

  tl_section_1.to(".section_1_moon", {
    scale: 1.2,
    duration: 4,
    ease: "sine.inOut",
    repeat: -1,
    yoyo: true,
  });

  tl_section_1.to(
    ".section_1_title",
    {
      y: "-30%",
      scale: 1.1,
      duration: 4,
      ease: "sine.inOut",
      repeat: -1,
      yoyo: true,
    },
    "<"
  );

  tl_section_1.to(
    ".section_1_image_bg",
    {
      scale: 1.1,
      duration: 4,
      ease: "power1.inOut",
      repeat: -1,
      yoyo: true,
    },
    "<"
  );
</script>
